openapi: "3.0.0"
info:
  title: Awesome API
  version: "1.0"
servers:
  - url: https://production.test.com/
    description: production environment

components:
  securitySchemes:
    bearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT

security:
  - bearerAuth: []

paths:
  /invoices/{id}/items/{item_id}:
    parameters:
      - name: id
        in: path
        required: true
        description: the invoice identifier, as is
        schema:
          type: string
          pattern: "(?im)^[{(]?[0-9A-F]{8}[-]?(?:[0-9A-F]{4}[-]?){3}[0-9A-F]{12}[)}]?$"
      - name: itemId
        in: path
        required: true
        description: the invoice identifier, as is
        schema:
          type: string
          pattern: "(?im)^[{(]?[0-9A-F]{8}[-]?(?:[0-9A-F]{4}[-]?){3}[0-9A-F]{12}[)}]?$"

    get:
      description: op-description
      operationId: opid
      tags:
        - Invoice Items
      responses:
        "200":
          description: teapot
          content:
            application/json:
              schema:
                type: object
        "429":
          description: too many requests
          content:
            application/json:
              schema:
                type: string