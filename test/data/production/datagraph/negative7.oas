openapi: "3.0.0"
info:
  title: Awesome API
  version: "1.0"
servers:
  - url: https://production.test.com/
    description: production environment

security:
  - basicAuth: []

components:
  securitySchemes:
    basicAuth:
      type: http
      scheme: basic
  schemas:
    CustomerResponse:
      description: a customer
      type: object
      properties:
        id:
          description: a property
          type: string
        name:
          description: a property
          type: string
      required: [ "id" ]
    InvoiceRequest:
      type: object
      description: an invoice
      properties:
        uuid:
          description: a property
          type: string
      required: [ "uuid" ]
paths:
  /users/{id}:
    parameters:
      - name: id
        description: a parameter
        in: path
        required: true
        schema:
          type: string
      - name: createdAt
        in: query
        description: when the user was created
        schema:
          type: string
    get:
      description: op-description
      operationId: opid
      tags:
        - Invoice Items
      responses:
        "200":
          description: teapot
          content:
            application/json:
              schema:
                $ref: "#/components/schemas/CustomerResponse"
  /invoices/{uuid}:
    parameters:
      - name: uuid
        in: path
        required: true
        description: the invoice identifier, as is
        schema:
          type: string
    get:
      description: op-description
      operationId: opid
      tags:
        - Invoice Items
      responses:
        "200":
          description: teapot
          content:
            application/yaml:
              example:
                a: 1
                b: 2
            application/json:
              schema:
                $ref: "#/components/schemas/InvoiceRequest"